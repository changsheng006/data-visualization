{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.0.0.json",
  "config": {
    "view": {
      "continuousHeight": 300,
      "continuousWidth": 400
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/changsheng006/data/master/airbnb_ghent.csv"
  },
  "hconcat": [
    {
      "title": {
        "text": "Number of Reviews with Neighbourhood (Ghent)"
      },
      "selection": {
        "brush": {
          "encodings": [
            "x"
          ],
          "type": "interval"
        },
        "click": {
          "encodings": [
            "color"
          ],
          "type": "multi"
        }
      },
      "transform": [
        {
          "filter": {
            "selection": "click"
          }
        }
      ],
      "mark": "point",
      "encoding": {
        "x": {
          "field": "neighbourhood_cleansed",
          "type": "nominal",
          "title": "neighbourhood",
          "sort": {
            "encoding": "x"
          }
        },
        "y": {
          "field": "number_of_reviews",
          "aggregate": "average",
          "type": "quantitative",
          "title": "number of reviews"
        },
        "color": {
          "condition": {
            "field": "room_type",
            "selection": {
              "or": [
                "brush",
                "click",
                "click"
              ]
            },
            "type": "nominal"
          },
          "value": "lightgray"
        },
        "tooltip": [
          {
            "field": "neighbourhood_cleansed",
            "type": "nominal"
          },
          {
            "field": "room_type",
            "type": "nominal",
            "title": "room type"
          },
          {
            "field": "number_of_reviews",
            "aggregate": "average",
            "type": "quantitative",
            "title": "number_of_reviews"
          }
        ]
